@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "AddBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    @Html.Label("Blog Title")
    @Html.TextBoxFor(x => x.BlogTitle, new {@class = "form-control"})
    <br />
    @Html.Label("Blog Content")
    @Html.TextBoxFor(x => x.BlogContent, new {@class = "form-control"})
    <br />@Html.Label("Blog Status")
    @Html.TextBoxFor(x => x.BlogStatus, new {@class = "form-control"})
    <br />@Html.Label("Blog Summery")
    @Html.TextBoxFor(x => x.BlogSummery, new {@class = "form-control"})
    <br />@Html.Label("Blog Image")
    @Html.TextBoxFor(x => x.BlogImage, new {@class = "form-control"})
    <br />@Html.Label("Blog Date Time")
    @Html.TextBoxFor(x => x.BlogDateTime, new {@class = "form-control"})
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x => x.CategoryID,(List<SelectListItem>)ViewBag.select, new{@class = "form-control"})
    <br />
    <button class="btn btn-primary">Add Blog</button>
</form>