@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}


<link href="~/AllFrontCodes/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/AllFrontCodes/css/contact.css" rel='stylesheet' type='text/css' />
    <link href="~/AllFrontCodes/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/AllFrontCodes/css/fontawesome-all.css" rel="stylesheet">
    <link href="~/AllFrontCodes//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
	    rel="stylesheet">




    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle">Paylaşımlarım</h3>
            <div class="inner-sec">
                <!--left-->
                <div class="left-blog-info-w3layouts-agileits text-left">
                    <div class="row">
                    @foreach (var item in Model)
                    {
                                              <div class="col-lg-4 card">
                                                  <a href="/ReadBlog/Index/@item.BlogID">
                                                      <img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
                                                  </a>
                                                  <div class="card-body">
                                                      <ul class="blog-icons my-4">
                                                          <li>
                                                              <a href="#">
                                                                  <i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogDateTime).ToString("dd-MMM-yyyy"))</a>
                                                          </li>
                                                      </ul>
                                                      <h5 class="card-title">
                                                              <a href="/ReadBlog/Index/@item.BlogID">@item.BlogTitle</a>
                                                      </h5>
                                                          <p class="card-text mb-3">@item.BlogSummery.Substring(0,item.BlogSummery.Substring(0,130).LastIndexOf(" "))...</p>
                                                      <a href="/ReadBlog/Index/@item.BlogID" class="btn btn-primary read-m">Tamamını Oku</a>
                                                    </div>
                                                </div>
                    }
                    </div>
                    <!--//left-->
                </div>
            </div>
        </div>
    </section>












<script src="~/AllFrontCodes/js/jquery-2.2.3.min.js"></script>
    <!-- //js -->
    <!--/ start-smoth-scrolling -->
    <script src="~/AllFrontCodes/js/move-top.js"></script>
    <script src="~/AllFrontCodes/js/easing.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>
    <!--// end-smoth-scrolling -->

    <script>
        $(document).ready(function () {
            /*
                                    var defaults = {
                                          containerID: 'toTop', // fading element id
                                        containerHoverID: 'toTopHover', // fading element hover id
                                        scrollSpeed: 1200,
                                        easingType: 'linear' 
                                     };
                                    */

            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>

